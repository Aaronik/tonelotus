<div id='track-stage-wrapper' class='fadein scaleInv anim_1'>
	<div id='track-wrapper'>
		<p id='tracks-label'>tracks</p>
		<p id='tracks-play-button'>play</p>
		<div id='track1' class='track'><ul id='track1ul' class='track-ul'></ul></div>
		<div id='track2' class='track'><ul id='track2ul' class='track-ul'></ul></div>
		<div id='track3' class='track'><ul id='track3ul' class='track-ul'></ul></div>
	</div>
	<div id='stage-wrapper'>
		<p id='stage-title'>Stage</p>
		<div data-cid='blank' class='staged blank-track'>Blank</div>
	</div>
</div>

<div id='matrix-wrapper' class='fadein scaleInv anim_3'>
	Main matrix wrapper
</div>

<div id='menu-accordion-wrapper' class='fadein scaleInv anim_2'>
	<div id='menu-accordion'>

	  <h3 class='top-accordion-menu-tab clickable'>Instruments</h3>
	  <div>
	    <p id='fm_synth' class='instrument selectedInstrument clickable'>fm_synth</p>
	    <p id='sine_pad' class='instrument clickable'>sine_pad</p>
	    <p id='drumkit_1' class='instrument clickable'>drumkit_1</p>
	  </div>

	  <h3 class='clickable'>Keyboard Shortcuts</h3>
		  <div>
		  	<p>p: Pause</p>
		  	<p>space: Clear Everything</p>
		  	<p>s: Stage Current Matrix</p>
		  	<p>k: seppuku</p>
		  </div>

	  <h3 class='clickable'>Beats Per Minute</h3>
	  <div>
	  	<form id='update-time-form'>
			  <input id='update-time-text-input' type='text' placeholder='120 bpm'>
			  <!-- <submit id='update-time-button' class='clickable'>Update</submit> -->
		  </form>
	  </div>

	  <h3 class='clickable'>Mainframe Operations (dev_tools)</h3>
	  <div>
	    <p id='masterRedraw' class='eventControls clickable'>Master Redraw</p>
	    <p id='spacePress' class='eventControls clickable'>Simulate Space Bar Press</p>
	    <p id='0' class='eventControls clickable'>Trigger Column 1 Activate</p>
	    <p id='delegateEvents' class='eventControls clickable'>Call delegateEvents()</p>
	    <p id='seppuku' class='eventControls clickable'>Destroy all items</p>
	  </div>

	  <h3 class='bottom-accordion-menu-tab'></h3>
	  <div>
	  </div>
	</div>
</div>